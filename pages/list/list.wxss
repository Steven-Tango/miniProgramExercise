.page {
  padding: 20rpx;
}

.header {
  display: flex;
  align-items: center;
}

.sort {
  position: relative;
  width: 40%;
}

.sort-t {
  padding: 0 20rpx;
  font-style: 26rpx;
  display: flex;
  align-items: center;
}

.sort-t:after {
  content: '';
  display: block;
  margin-left: 10rpx;
  border-top: 10rpx solid #000000;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  transition: transform .3s;
}

.sort-t.active:after {
  transform: rotate(180deg);
}

.sort-list {
  overflow: hidden;
  top: 100%;
  height: 0;
  position: absolute;
  background-color: #f5f5f5;
  padding: 0 20rpx;
  font-size: 24rpx;
  line-height: 3;
  color: #666666;
  transition: height .3s;
}

.sort-list.show {
  height: 500rpx;
}

.sort-text {
  font-size: 22rpx;
  color: #666666;
}

.margin-l {
  margin-left: 30rpx;
}

.choose {
  font-size: 26rpx;
  flex: 1;
  text-align: right;
}