page {
  background-color: #f5f5f5;
}

.header {
  display: flex;
  padding: 20rpx 30rpx;
  position: relative;
}

.h-item {
  width: 160rpx;
  font-size: 32rpx;
  line-height: 2;
  text-align: center;
}

.null_page {
  text-align: center;
  font-size: 40rpx;
  line-height: 5;
}

.header::after {
  content: '';
  position: absolute;
  width: 120rpx;
  height: 5px;
  background-color: #00acf6;
  bottom: 0;
  border-radius: 4rpx;
  transition: left .3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

.header-0::after {
  left: 50rpx;
}

.header-1::after {
  left: 210rpx;
}

.header-2::after {
  left: 370rpx;
}

.header-3::after {
  left: 530rpx;
}

.list {
  padding: 20rpx 30rpx;
}

.item {
  background-color: #ffffff;
  border-radius: 5px;
  padding: 30rpx 30rpx;
  margin-bottom: 20rpx;
}

.row1 {
  display: flex;
  align-items: center;
}

.row1 .img {
  width: 70rpx;
  height: 70rpx;
}

.shop-status {
  color: #666666;
  font-size: 26rpx;
}

.shop-name {
  padding-right: 40rpx;
  padding-left: 20rpx;
  font-size: 30rpx;
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  position: relative;
}

.shop-name::after {
  content: '>';
  position: absolute;
  right: 30rpx;
  color: #999999;
  font-size: 36rpx;
  line-height: 1.2;
}
.row2{
  display: flex;
  height: 160rpx;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
}
.money{
  width: 140rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: center;
}
.m text{
  font-size: 24rpx;
}
.m{
  font-size: 32rpx;
}
.amount{
  font-size: 26rpx;
  color: #666666;
}
.row3{
  display: flex;
  justify-content: flex-end;
}
.btn{
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  border: 1px solid #00acf6;
  font-size: 28rpx;
  color: #00acf6;
}
.food-box{
  flex: 1;
  display: flex;
  align-items: center;
  overflow-x: scroll;
}
.food-img{
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
}
.food-name{
  font-size: 28rpx;
  flex: 1;
}
.scroll{
  width: 100%;
  white-space: nowrap;
  display: flex;
}

